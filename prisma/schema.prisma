generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Pas de url ici → c'est dans prisma.config.ts
}

model Inventaire {
  id              Int              @id @default(autoincrement())
  date            DateTime         @default(now())
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  inventaireItems InventaireItem[]
}

model InventaireItem {
  id           Int      @id @default(autoincrement())
  imei         String
  brand        String?
  model        String?
  status       String?
  capacity     String?
  color        String?
  revvoGrade   String?
  inventaireId Int
  quantite     Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  inventaire   Inventaire @relation(fields: [inventaireId], references: [id])

  @@unique([imei, inventaireId])   // ← OBLIGATOIRE pour autoriser le même IMEI ailleurs
}